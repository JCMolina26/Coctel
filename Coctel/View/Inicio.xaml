<Window x:Class="Coctel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Coctel"
        mc:Ignorable="d"
        
        Title="Cóctel" Height="450" Width="600" ResizeMode="NoResize" SizeToContent="Manual" WindowStartupLocation="CenterScreen" Cursor="Pen" >
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#AA005F73" Offset="0.03"/>
            <GradientStop Color="White" Offset="0.91"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="102*"/>
            <ColumnDefinition Width="31*"/>
            <ColumnDefinition Width="160*"/>
            <ColumnDefinition Width="56*"/>
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="98*"/>
            <ColumnDefinition Width="120*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <!--Mensaje de bienvenida de coctel-->
        <TextBlock Grid.ColumnSpan="4" Text="Bienvenido a Cóctel" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="30" Margin="36,0,0,0" Grid.Column="2"/>
        <!--Campos de usuario y contraseña para login-->
        <StackPanel Margin="7,5,20,5"  Grid.Row="1" Grid.ColumnSpan="4" Grid.Column="2">
            <TextBlock Text="Usuario:" HorizontalAlignment="Center"  />
            <TextBox Margin="10,2"/>
            <TextBlock Text="Contraseña:" HorizontalAlignment="Center"/>
            <TextBox Margin="10,2"/>
        </StackPanel>
        <!--Boton de login-->
        <Button Grid.Row="2" Grid.Column="6" Margin="10,10,10,10" Grid.ColumnSpan="1" Content="Login"/>
        <!--Listview para mostrar cócteles de DB-->
        <!--<ListView Grid.Row="3" Grid.ColumnSpan="2">
        </ListView>-->
    </Grid>
</Window>
