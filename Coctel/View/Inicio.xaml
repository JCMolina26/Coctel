<Window x:Class="Coctel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Coctel"
        mc:Ignorable="d"
        
        Title="Cóctel" Height="500" Width="600" ResizeMode="NoResize" SizeToContent="Manual" WindowStartupLocation="CenterScreen" Cursor="Pen" >

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Archivo">
                <!--Sección dedicada a la documentación-->
                <MenuItem Header="Acerca de Cóctel"/>
                <Separator/>
                <MenuItem Header="Salir" Click="ExitApp_Click"/>
                <MenuItem Header="Testear conexion" Click="Conexion_Click"/>
            </MenuItem>
        </Menu>
        <Grid DockPanel.Dock="Bottom">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="5*"/>
            </Grid.RowDefinitions>
            <!--Mensaje de bienvenida de coctel-->
            <TextBlock Grid.Row="0" Text="Bienvenido a Cóctel" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Margin="36,0,0,0"/>
            <!-- Sección destinada a LOGIN -->
            <StackPanel Margin="140,5"  Grid.Row="1">
                <TextBlock Text="Usuario:" HorizontalAlignment="Center"  />
                <TextBox Margin="10,2" />
                <TextBlock Text="Contraseña:" HorizontalAlignment="Center"/>
                <TextBox Margin="10,2" />
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" Text="¿Olvidaste la contraseña?" />
                    <TextBlock Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Text="Registrarse" />
                    <Button Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.ColumnSpan="1" Content="Iniciar sesión"/>
                </Grid>
            </StackPanel>
            <!-- Sección dedicada a búsqueda-->
            <StackPanel Margin="30,0" Grid.Row="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border BorderThickness="10"/>
                    <TextBox Grid.Column="0" Text="Buscar cóctel..." VerticalAlignment="Center" />
                    <Button Grid.Column="1" Content="Buscar" Margin="10"/>
                    <TextBox Grid.Column="3" Text="Añadir ingrediente..."  VerticalAlignment="Center"/>
                    <Button Grid.Column="4" Content="Añadir" Margin="10"/>
                </Grid>
            </StackPanel>
            <!-- Sección dedicada a la lista de cócteles -->
            <ListView Grid.Row="4" >
                
            </ListView>
            <TextBlock x:Name="testing" Text="Placeholder" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="5" Grid.Row="3"/>
            <!--TODO-->
        </Grid>
    </DockPanel>
    
</Window>
